/* 头像 */
.userinfo{
  position: relative;
  width: 750rpx;
  height: 320rpx;
  background: #029eda; 
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}


.tableviewcell {
	padding: 20rpx 40rpx;
	border-bottom: 1rpx solid #ddd;
	color: #666;
	background: white;
	display: flex;
	align-items: center;
}



/*icon*/
.tableviewcell image {
	width: 60rpx;
	height: 60rpx;
}

/*text*/
.tableviewcell text {
	font-size: 26rpx;
  color: #000;
	margin-left: 10px;
}
/*button*/
.tableviewcell button {
	font-size: 26rpx;
  color: #000;
	margin-left: 10px;

}
.zxing{
  display: flex;
  width:  720rpx;
  height: 300rpx;
  /* background: #029eda; */
  /* 决定主轴的方向 row（默认值）row-reverse：水平方向右/column：垂直方向/column-reverse：垂直方向起点在下。 */
  /* flex-direction: column; */
  /* 定义了项目在主轴上的对齐方式 */
  justify-content: center;
  /* 定义项目在交叉轴上如何对齐。 */
  align-items: center;
}
.zxing image{
  width: 290rpx;
  height: 290rpx;
  margin: 35rpx;
}