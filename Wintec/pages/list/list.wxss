/* pages/list/list.wxss */

page {
  padding: 0px;
  margin: 0px;
  height: 100%;
  width: 100%;
  display: flex;
}

.post {
  width: 50px;
  height: 50px;
  float: right;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  border: 0 solid #fff;
  border-radius: 500px;
  margin: 16px;
  box-shadow: 4px 1px 1px #ccc;
}

/*列表项容器 */

.mesitem {
  width: 100%;
  display: flex;
  /* flex-grow: row no-wrap; *//* justify-content: space-between;  */
  justify-content: flex-start;
  padding: 30rpx;
  box-sizing: border-box;
  /* height: 180rpx; */
  align-items: center;
  border-bottom: 1px solid #004da0;
}

/* 圆图容器 */

.pic {
  display: flex;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #029eda;
 
  /* 决定主轴的方向 row（默认值）row-reverse：水平方向右/column：垂直方向/column-reverse：垂直方向起点在下。 */
  flex-direction: column;
  /* 定义了项目在主轴上的对齐方式 */
  justify-content: center;
  /* 定义项目在交叉轴上如何对齐。 */
  align-items: center;
}

.pic_title {
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
}

.pic_txt {
  font-size: 26rpx;
  font-weight: bold;
  color: #fff;
}

/* 内容容器 */

.message {
  flex-grow: 1;
   margin-left: 30rpx;
}

.mescon {
  /* 两端对齐 */
  flex-direction: row;
  height: 100%;
  justify-content: space-between;
  display: flex;
}

.mestitle {
  font-size: 32rpx;
  font-weight: bold;
}

.mesnew {
  color: #333;
  font-size: 30rpx;
}

.mesdate {
  font-size: 24rpx;
  color: #444;
}

/*条目*/

.askBtn {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: bold;
  background: #029eda;
  border-radius: 60rpx;
  /* border: 1px solid #4675F9;  */
  color: #fff;
}

.null {
  height: 100%;
  width: 720rpx;
  display: flex;
   flex-direction: column;
  justify-content: center;
  align-items: center;
}

.pen{
  width: 100rpx;
  height: 100rpx;
}